<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <!-- å¼•å…¥ Spring Boot å®˜æ–¹é»˜è®¤é…ç½® -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- å¼•å…¥ application.properties é…ç½®æ–‡ä»¶ä¸­çš„å±žæ€§å¹¶ä½œä¸ºæ—¥å¿—å‚æ•° -->
    <springProperty scope="context" name="env" source="spring.profiles.active"/>
    <springProperty scope="context" name="service" source="spring.application.name"/>

    <!-- è®¾ç½®å˜é‡ -->
    <property name="logfile" value="/opt/log/stash/${service}/${service}"/>â€‹

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <charset>UTF-8</charset>
            <pattern>%clr(%d{yyyy-MM-dd HH:mm:ss.SSS}){faint} %clr(${LOG_LEVEL_PATTERN:-%5p}) %clr(${PID:- }){magenta} %clr(---){faint} %clr([%15.15t]){faint} %clr(%-40.40logger{39}){cyan} %clr(:){faint} %m%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logfile}.log</file>
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <includeMdc>true</includeMdc>
            <!-- åœ¨æ—¥å¿—ä¸­æ·»åŠ è‡ªå®šä¹‰å‚æ•°ï¼Œæ­¤å¤„ä»…åšæ¼”ç¤º -->
            <customFields>{ "smile": "ðŸ˜„" }</customFields>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${logfile}-%d{yyyy-MM-dd}.%i.zip</fileNamePattern>
            <maxHistory>60</maxHistory>
            <maxFileSize>300MB</maxFileSize>
            <totalSizeCap>20GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <appender name="ASYNC" class="ch.qos.logback.classic.AsyncAppender">
        <appender-ref ref="FILE"/>
        <queueSize>524288</queueSize>
        <discardingThreshold>32768</discardingThreshold>
    </appender>

    <springProfile name="dev">
        <root level="INFO">
            <appender-ref ref="CONSOLE"/>
            <appender-ref ref="ASYNC"/>
        </root>
        <!-- æŒ‡å®šæŸä¸€ä¸ªåŒ…æˆ–è€…æŸä¸€ä¸ªç±»çš„ level å’Œ appender -->
        <!-- additivityï¼šæ˜¯å¦å‘ä¸Šçº§ logger ä¼ é€’æ‰“å°ä¿¡æ¯ -->
        <!-- ä¸æŒ‡å®š appender åˆ™æ­¤ logger ä¸æ‰“å°ä¿¡æ¯ -->
        <logger name="com.hapicc.mappers" level="DEBUG" additivity="false">
            <appender-ref ref="CONSOLE"/>
        </logger>
    </springProfile>

    <!--<springProfile name="test, valid, prod">-->
    <springProfile name="!dev">
        <root level="INFO">
            <appender-ref ref="ASYNC"/>
        </root>
    </springProfile>

</configuration>